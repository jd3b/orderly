generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model product {
  pid      Int     @id @default(autoincrement())
  
  
  categoryid      Int
  category   category @relation(fields: [categoryid], references: [cid])
  name   String
  desc    String
  summary String
  sellingPrice Float
  costPrice Float
  isFeatured Boolean
  createdAt DateTime? @default(now()) @db.Timestamptz(6)
  
  
}
model category{
  cid Int @id @default(autoincrement())
  name   String
  desc    String
  slug  String
  createdAt DateTime? @default(now()) @db.Timestamptz(6)
  product product[]
}
