// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}
model product {
  pid      Int     @id @default(sequence())
  name   String
  desc    String
  summary String
  sellingPrice Float
  costPrice Float
  isFeatured Boolean
  
}
model category{
  cid BigInt @id @default(autoincrement())
  name   String
  desc    String
  slug  String
  
}
